{
  "name": "cross-browser-tests-runner",
  "version": "0.2.2",
  "description": "Seamless cross-browser testing with multiple platforms and runners",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reeteshranjan/cross-browser-tests-runner.git"
  },
  "keywords": [
    "cross-browser testing",
    "javascript testing",
    "javascript unit testing",
    "JS testing",
    "browserstack",
    "saucelabs",
    "crossbrowsertesting.com",
    "testingbot",
    "karma",
    "testem",
    "yeti",
    "intern",
    "jasmine",
    "mocha",
    "qunit",
    "buster"
  ],
  "author": "Reetesh Ranjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reeteshranjan/cross-browser-tests-runner/issues"
  },
  "homepage": "https://github.com/reeteshranjan/cross-browser-tests-runner#readme",
  "files": [
    "lib",
    "bin",
    "conf",
    "samples",
    "server.js"
  ],
  "bin": {
    "cbtr-server": "./bin/server/server.js",
    "cbtr-quick-start": "./bin/utils/quick-start.js",
    "cbtr-browserstack-update": "./bin/utils/conf/browsers/browserstack.js",
    "cbtr-init": "./bin/utils/settings/cbtr.js",
    "cbtr-testem-browserstack-init": "./bin/utils/settings/testem/browserstack.js",
    "cbtr-testem-browserstack-open": "./bin/hooks/testem/browserstack/open.js",
    "cbtr-testem-browserstack-close": "./bin/hooks/testem/browserstack/close.js",
    "cbtr-testem-browserstack-browser": "./bin/hooks/testem/browserstack/browser.js"
  },
  "scripts": {
    "eslint": "./node_modules/.bin/eslint bin/ lib/",
    "unit-tests": "UNIT_TESTS=1 LOG_LEVEL=WARN ./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- --reporter lcovonly --ui bdd -R spec -t 5000 tests/unit/tests.js",
    "unit-tests-win": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- --reporter lcovonly --ui bdd -R spec -t 5000 tests/unit/tests.js",
    "cov-html": "UNIT_TESTS=1 LOG_LEVEL=WARN ./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- --ui bdd -R spec -t 5000 tests/unit/tests.js",
    "no-cov": "UNIT_TESTS=1 LOG_LEVEL=DEBUG ./node_modules/.bin/mocha tests/unit/tests.js",
    "integration-tests": "LOG_LEVEL=WARN ./node_modules/.bin/mocha tests/integration/tests.js",
    "integration-tests-win": "./node_modules/.bin/mocha tests/integration/tests.js",
    "functional-tests": "LOG_LEVEL=WARN ./node_modules/.bin/mocha tests/functional/tests.js",
    "functional-tests-win": "./node_modules/.bin/mocha tests/functional/tests.js",
    "codecov-upload": "./node_modules/.bin/codecov",
    "coveralls-upload": "cat coverage/lcov.info | ./node_modules/.bin/coveralls",
    "eslint-unit-tests-cov": "npm run eslint && npm run unit-tests && npm run codecov-upload && npm run coveralls-upload",
    "eslint-unit-tests-codecov": "npm run eslint && npm run unit-tests && npm run codecov-upload",
    "eslint-unit-tests-codecov-win": "npm run eslint && npm run unit-tests-win && npm run codecov-upload"
  },
  "engines": {
    "node": ">=4",
    "npm": ">=2.15.11"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "chai-spies": "^0.7.1",
    "codecov": "^2.2.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.1",
    "finalhandler": "^1.0.3",
    "fs-extra": "^3.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nock": "^9.0.13",
    "serve-static": "^1.12.3",
    "testem": "^1.18.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "js-yaml": "^3.8.4",
    "minimist": "^1.2.0",
    "p-retry": "^1.0.0",
    "ps-node": "^0.1.6",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "sleep": "^5.1.1",
    "useragent": "^2.2.0",
    "uuid": "^3.1.0"
  }
}
