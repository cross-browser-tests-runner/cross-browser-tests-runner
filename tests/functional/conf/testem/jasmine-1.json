{
  "parallel": 4,
  "browser_start_timeout" : 300,
  "framework": "jasmine",
  "on_start": {
    "command": "node ./bin/hooks/testem/browserstack/open.js --local",
    "wait_for_text": "opened testem/browserstack",
    "wait_for_text_timeout": 60000
  },
  "on_exit": "node ./bin/hooks/testem/browserstack/close.js",
  "launchers": {
    "chrome": {
      "exe": "node",
      "args": [
        "./bin/hooks/testem/browserstack/browser.js",
        "--os", "Windows",
        "--osVersion", "10",
        "--browser", "chrome",
        "--browserVersion", "51.0",
        "--screenshots", "--video"
      ],
      "protocol": "browser"
    },
    "firefox": {
      "exe": "node",
      "args": [
        "./bin/hooks/testem/browserstack/browser.js",
        "--os", "Windows",
        "--osVersion", "8.1",
        "--browser", "firefox",
        "--browserVersion", "43.0",
        "--screenshots", "--video"
      ],
      "protocol": "browser"
    },
    "safari": {
      "exe": "node",
      "args": [
        "./bin/hooks/testem/browserstack/browser.js",
        "--os", "OSX",
        "--osVersion", "El Capitan",
        "--browser", "safari",
        "--browserVersion", "9.1",
        "--screenshots", "--video"
      ],
      "protocol": "browser"
    },
    "ie": {
      "exe": "node",
      "args": [
        "./bin/hooks/testem/browserstack/browser.js",
        "--os", "Windows",
        "--osVersion", "8.1",
        "--browser", "ie",
        "--browserVersion", "11.0",
        "--screenshots", "--video"
      ],
      "protocol": "browser"
    }
  },
  "launch_in_ci": [
    "chrome",
    "firefox",
    "safari",
    "ie"
  ],
  "src_files": [
    "./tests/functional/code/src/*.js",
    "./tests/functional/code/tests/jasmine/js/*.js"
  ]
}
